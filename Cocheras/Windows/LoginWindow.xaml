<Window x:Class="Cocheras.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Parking"
        Icon="pack://application:,,,/Assets/Images/logo.png"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        MinWidth="350"
        MaxWidth="400"
        KeyDown="Window_KeyDown">
    <Border CornerRadius="8" 
            Background="#F5F5F5" 
            BorderThickness="0"
            Effect="{StaticResource ShadowEffect}">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#1E3A8A" 
                    CornerRadius="8,8,0,0" 
                    Margin="-25,-25,-25,18"
                    Height="50">
                <Grid>
                    <TextBlock Text="Inicio de Sesión" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <Button x:Name="BtnCerrar" 
                            Content="✕" 
                            FontSize="16"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="35" 
                            Height="35"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Cursor="Hand"
                            Click="BtnCerrar_Click"/>
                </Grid>
            </Border>

            <!-- Logo/Título -->
            <StackPanel Grid.Row="1" Margin="0,0,0,18" HorizontalAlignment="Center">
                <Image Source="pack://application:,,,/Assets/Images/logo.png"
                       Height="64"
                       Stretch="Uniform"
                       Margin="0,0,0,8"/>
                <TextBlock Text="Parking" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,4"/>
                <TextBlock x:Name="TxtNombreEmpresaLogin"
                           Text="Estacionamiento"
                           FontSize="12" 
                           Foreground="#64748B"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Formulario -->
            <StackPanel Grid.Row="2" MinWidth="300">
                <!-- Usuario -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Usuario" 
                               FontSize="11" 
                               FontWeight="SemiBold" 
                               Foreground="#334155"
                               Margin="0,0,0,3"/>
                    <TextBox x:Name="TxtUsuario" 
                             Height="40" 
                             Padding="10,8"
                             FontSize="12"
                             VerticalContentAlignment="Center"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             Background="White"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"/>
                </StackPanel>

                <!-- Contraseña -->
                <StackPanel>
                    <TextBlock Text="Contraseña" 
                               FontSize="11" 
                               FontWeight="SemiBold" 
                               Foreground="#334155"
                               Margin="0,0,0,3"/>
                    <PasswordBox x:Name="TxtPassword" 
                                 Height="40" 
                                 Padding="10,8"
                                 FontSize="12"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Background="White"
                                 GotFocus="PasswordBox_GotFocus"
                                 LostFocus="PasswordBox_LostFocus"
                                 KeyDown="TxtPassword_KeyDown"/>
                </StackPanel>
            </StackPanel>

            <!-- Link recuperación -->
            <TextBlock Grid.Row="3" 
                       x:Name="LnkRecuperar" 
                       Text="¿Olvidaste tu usuario o contraseña?" 
                       FontSize="10" 
                       Foreground="#3B82F6"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"
                       Cursor="Hand"
                       MouseLeftButtonDown="LnkRecuperar_MouseLeftButtonDown"/>

            <!-- Botón -->
            <Border Grid.Row="4" 
                    CornerRadius="6"
                    Margin="0,18,0,0"
                    Background="#1E3A8A">
                <Button x:Name="BtnIngresar" 
                        Content="INGRESAR" 
                        Height="38" 
                        FontSize="13" 
                        FontWeight="Bold"
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnIngresar_Click"/>
            </Border>

            <!-- Botón oculto para reiniciar BD (Ctrl+Shift+R) -->
            <Button x:Name="BtnReiniciarBD" 
                    Visibility="Collapsed"
                    Click="BtnReiniciarBD_Click"/>
        </Grid>
    </Border>
</Window>
